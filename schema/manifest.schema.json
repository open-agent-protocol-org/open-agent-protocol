{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OAP Manifest Schema",
  "description": "Schema for validating Open Agent Protocol manifest.json files",
  "type": "object",
  "required": [
    "oap_version",
    "agent_id",
    "name",
    "description",
    "version",
    "permissions"
  ],
  "properties": {
    "oap_version": {
      "type": "string",
      "description": "OAP specification version"
    },
    "agent_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9\\.\\-]+$",
      "description": "Unique identifier for the agent"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "contact": { "type": "string" }
      },
      "required": ["name"]
    },
    "runtime_compatibility": {
      "type": "object",
      "properties": {
        "models_supported": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "permissions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "memory": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "scope": {
          "type": "string",
          "enum": ["per_user", "per_workspace"]
        }
      }
    },
    "triggers": {
      "type": "object",
      "properties": {
        "manual": { "type": "boolean" },
        "scheduled": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "cron"],
            "properties": {
              "id": { "type": "string" },
              "cron": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "events": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "source", "event_type"],
            "properties": {
              "id": { "type": "string" },
              "source": { "type": "string" },
              "event_type": { "type": "string" },
              "filter": { "type": "object" },
              "debounce": { "type": "object" }
            }
          }
        }
      }
    }
  }
}
